echo "Script to insert a line in a file"
echo -e "https_proxy=\'https://127.0.0.1:9000/\'\n"

cat /etc/environment
echo -e "\n"
# check if arguments 1 and 2 are passed
if [ $# -ne 2 ]; then
    echo "Enter the string to insert: "
    read str

    echo "Enter the file path: "
    read path
else 
    echo "Inserting line '$1' in $2"
    str=$1
    path=$2
fi


echo $str | sudo tee -a $path
cat $path
