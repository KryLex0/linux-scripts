echo -e "Content of /etc/environment: \n"
cat /etc/environment


echo "Script to delete a line from a file"

# check if arguments 1 and 2 are passed
if [ $# -ne 2 ]; then
    # echo "Usage: $0 <string to be deleted> <file name>"
    echo "Enter the string to be searched: "
    read search

    echo "Enter the file name: "
    read file
else 
    echo "Deleting '$1' from $2"
    search=$1
    file=$2
fi


sudo grep -v "$search" $file > tmpFile && sudo mv tmpFile $file
cat $file
